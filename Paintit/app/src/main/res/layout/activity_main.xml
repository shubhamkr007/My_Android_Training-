<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.kyanogen.signatureview.SignatureView xmlns:sign="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signature_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/optionHolder"
        sign:backgroundColor="#ffffff"
        sign:enableSignature="true"
        sign:penColor="#000000"
        sign:penSize="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/optionHolder">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SeekBar
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:id="@+id/penSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


            </SeekBar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5dp"
                android:id="@+id/penSizeTextview"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight=".75"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:id="@+id/btErase"
                android:scaleType="center"
                android:src="@drawable/eraser"

                android:background="@color/white"/>
            <ImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:id="@+id/btcolor"
                android:scaleType="center"
                android:src="@drawable/color"

                android:background="@color/white"/>
            <ImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:id="@+id/btsave"
                android:scaleType="center"
                android:src="@drawable/save"

                android:background="@color/white"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>