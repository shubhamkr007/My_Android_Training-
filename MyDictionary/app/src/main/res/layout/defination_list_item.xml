<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/color2"
    android:layout_marginTop="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_defination"
            android:textSize="18dp"
            android:text="Defination"
            android:textAlignment="center"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_example"
            android:textStyle="normal"
            android:textSize="18dp"
            android:text="Example"
            android:textAlignment="center"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Synonyms"
            android:textAlignment="center"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_synonyms"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="italic"
            android:textSize="16dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Antonyms"
            android:textAlignment="center"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_antonyms"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="italic"
            android:textSize="16dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:padding="8dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>